<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.focustrackr">

    <!-- Permisos utilizados en la aplicación -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FocusTrackr">

        <!-- Pantalla inicial (splash) -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Pantalla de autenticación -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" />

        <!-- Pantalla principal de la aplicación -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false" />

        <!-- Pantalla de creación de sesión -->
        <activity
            android:name=".ui.newsession.NewSessionActivity"
            android:exported="false" />

        <!-- Pantalla de detalle de sesión -->
        <activity
            android:name=".ui.sessiondetail.SessionDetailActivity"
            android:exported="false" />

    </application>

</manifest>
