<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLocationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rendimiento por ubicacion"
            android:textSize="24sp"
            android:textAlignment="center"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/tvBestLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lugar mas productivo:"
            android:textAlignment="center"
            android:textSize="18sp"
            android:paddingBottom="16dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvNoLocations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No hay datos de ubicacion registrados"
            android:textAlignment="center" />

        <!-- Contenedor donde se insertarán dinámicamente las ubicaciones -->
        <LinearLayout
            android:id="@+id/layoutLocationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
