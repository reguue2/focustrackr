<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvStatsTitle"
        style="@style/Text.FocusTrackr.Headline"
        android:text="Estadisticas de rendimiento"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardStats"
        style="@style/Widget.FocusTrackr.Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTotalMinutes"
                style="@style/Text.FocusTrackr.Body"
                android:text="Minutos totales: 0" />

            <TextView
                android:id="@+id/tvAvgFocus"
                style="@style/Text.FocusTrackr.Body"
                android:layout_marginTop="6dp"
                android:text="Promedio de foco: 0%" />

            <TextView
                android:id="@+id/tvTotalSessions"
                style="@style/Text.FocusTrackr.Body"
                android:layout_marginTop="6dp"
                android:text="Numero de sesiones: 0" />

            <TextView
                android:id="@+id/tvBestSession"
                style="@style/Text.FocusTrackr.Body"
                android:layout_marginTop="10dp"
                android:text="Mejor sesion: -" />

            <TextView
                android:id="@+id/tvWorstSession"
                style="@style/Text.FocusTrackr.Body"
                android:layout_marginTop="4dp"
                android:text="Sesion mas corta: -" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <FrameLayout
        android:id="@+id/chartContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardStats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
