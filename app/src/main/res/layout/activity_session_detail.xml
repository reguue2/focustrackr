<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="40dp">

    <TextView
        android:id="@+id/tvDetailTitle"
        style="@style/Text.FocusTrackr.Headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/session_detail_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDetail"
        style="@style/Widget.FocusTrackr.Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetailTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDetailDuration"
                style="@style/Text.FocusTrackr.Body"
                android:layout_marginTop="8dp"
                android:text="@string/session_detail_duration" />

            <TextView
                android:id="@+id/tvDetailFocus"
                style="@style/Text.FocusTrackr.Body"
                android:layout_marginTop="4dp"
                android:text="@string/session_detail_focus" />

            <ProgressBar
                android:id="@+id/pbDetailFocus"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="6dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_focus" />

            <TextView
                android:id="@+id/tvDetailDistractions"
                style="@style/Text.FocusTrackr.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Distracciones detectadas: 0" />


            <TextView
                android:id="@+id/tvDetailLocation"
                style="@style/Text.FocusTrackr.Body"
                android:layout_marginTop="4dp"
                android:text="@string/session_detail_location" />

            <TextView
                android:id="@+id/tvDetailTimestamp"
                style="@style/Text.FocusTrackr.Body"
                android:layout_marginTop="4dp"
                android:text="@string/session_detail_timestamp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        style="@style/Widget.FocusTrackr.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/generic_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardDetail" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDeleteSession"
        style="@style/Widget.FocusTrackr.Button.Secondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/generic_eliminar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />


</androidx.constraintlayout.widget.ConstraintLayout>
