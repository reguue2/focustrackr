<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema principal de la app -->
    <style name="Theme.FocusTrackr" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/focus_primary</item>
        <item name="colorPrimaryVariant">@color/focus_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/focus_accent</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/focus_primary_dark</item>

        <!-- Fondo por defecto -->
        <item name="android:windowBackground">@color/focus_background</item>

        <!-- Tipografia basica -->
        <item name="android:textColorPrimary">@color/focus_text_primary</item>
        <item name="android:textColorSecondary">@color/focus_text_secondary</item>

        <!-- Componentes Material -->
        <item name="materialButtonStyle">@style/Widget.FocusTrackr.Button</item>
        <item name="floatingActionButtonStyle">@style/Widget.FocusTrackr.FAB</item>
    </style>

    <!-- Estilo generico para Buttons -->
    <style name="Widget.FocusTrackr.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <!-- Estilo para el FAB -->
    <style name="Widget.FocusTrackr.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/focus_primary</item>
        <item name="tint">@color/white</item>
    </style>

    <!-- Puedes usar esto en TextView importantes si quieres -->
    <style name="Text.FocusTrackr.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/focus_text_primary</item>
    </style>

    <style name="Text.FocusTrackr.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/focus_text_secondary</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/focus_surface</item>
        <item name="hintTextColor">@color/focus_text_secondary</item>
        <item name="boxStrokeColor">@color/focus_primary</item>
        <item name="android:textColor">@color/focus_text_primary</item>
    </style>

</resources>
